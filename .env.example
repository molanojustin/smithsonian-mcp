# Smithsonian MCP Server Configuration
# Copy this file to .env and configure your settings

# Required: Get your API key from https://api.data.gov/signup/
SMITHSONIAN_API_KEY=your_api_key_here

# Optional: Override default API base URL
# API_DATA_GOV_BASE_URL=https://api.data.gov

# Optional: Server configuration
SERVER_NAME=Smithsonian Open Access

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Caching
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# Optional: Rate limiting
# DEFAULT_RATE_LIMIT=60

# Optional: Image handling
MAX_IMAGE_SIZE_MB=50
